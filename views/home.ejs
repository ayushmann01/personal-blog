<%- include('partials/header'); -%>  

<div>
    <h1>Home</h1>

    <% posts.forEach(post => { %>
        <div>
            <% const content = post.content.substring(0, Math.min(110, post.content.length) ); %> 
            <h2><%= post.title %></h2>
            <p><%= content %> ...
                <a  style="font-size: medium;" href="https://bloging-site.herokuapp.com/posts/<%=post._id%>">Read more</a>
            </p> 
        </div> 
    <% }); %>     
</div>
   
<%- include('partials/footer'); -%>